import SwiftUI

struct ProfileView: View {
    // Sample Data
    @State private var username: String = "GreenUser123"
    @State private var email: String = "greenuser@example.com"
    @State private var score: Int = 1200
    @State private var status: String = "Active"
    @State private var role: String = "Environmentalist"

    var body: some View {
        VStack(spacing: 20) {
            Image(systemName: "leaf.circle.fill") // Placeholder for profile picture
                .resizable()
                .scaledToFit()
                .frame(width: 120, height: 120)
                .foregroundColor(.green)
                .padding(.top, 50)

            Text(username)
                .font(.title2)
                .fontWeight(.bold)
                .foregroundColor(.green)

            Text(email)
                .font(.subheadline)
                .foregroundColor(.gray)

            HStack(spacing: 10) {
                Text("Score:")
                    .fontWeight(.semibold)
                Text("\(score)")
            }
            .foregroundColor(.green)

            HStack(spacing: 10) {
                Text("Status:")
                    .fontWeight(.semibold)
                Text(status)
            }
            .foregroundColor(status == "Active" ? .green : .red)

            HStack(spacing: 10) {
                Text("Role:")
                    .fontWeight(.semibold)
                Text(role)
            }
            .foregroundColor(.green)

            Spacer() // Pushes everything to the top
        }
        .padding()
        .navigationBarTitle("Green World Profile", displayMode: .inline)
        .navigationBarColor(backgroundColor: .green, textColor: .white)
    }
}

struct ProfileView_Previews: PreviewProvider {
    static var previews: some View {
        ProfileView()
    }
}

// Extension to customize the navigation bar color
extension UINavigationController {
    open override func viewDidLoad() {
        super.viewDidLoad()
        navigationBar.tintColor = .white
        navigationBar.titleTextAttributes = [.foregroundColor: UIColor.white]
    }
}

