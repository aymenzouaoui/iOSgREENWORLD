private func verifyCode() {
    let fullCode = code1 + code2 + code3 + code4
    userViewModel.verifyResetCode(email: email, resetCode: fullCode) { result in
        DispatchQueue.main.async {
            switch result {
            case .success:
                // Handle the success case and navigate to ResetPasswordView
                self.navigateToResetPassword = true
            case .failure:
                // Handle the failure case, e.g., show a toast
                self.showToast = true
                DispatchQueue.main.asyncAfter(deadline: .now() + 3) {
                    self.showToast = false
                }
            }
        }
    }
}
