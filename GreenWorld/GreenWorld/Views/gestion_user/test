import SwiftUI

struct ProfileView: View {
    @State private var username: String = "GreenUser"
    @State private var email: String = "user@greenworld.com"
    @State private var score: Int = 1200
    @State private var status: String = "Active"
    @State private var role: String = "Environmentalist"

    var body: some View {
        VStack {
            Image(systemName: "leaf.circle.fill") // Placeholder for profile image
                .resizable()
                .scaledToFit()
                .frame(width: 100, height: 100)
                .foregroundColor(.green)
                .padding(.top, 50)

            Text(username)
                .font(.title)
                .fontWeight(.bold)
                .foregroundColor(.green)

            Text(email)
                .font(.subheadline)
                .foregroundColor(.gray)

            HStack {
                Text("Score:")
                    .fontWeight(.bold)
                Text("\(score)")
            }
            .font(.subheadline)
            .padding(.top, 5)

            HStack {
                Text("Status:")
                    .fontWeight(.bold)
                Text(status)
            }
            .font(.subheadline)
            .padding(.top, 3)

            HStack {
                Text("Role:")
                    .fontWeight(.bold)
                Text(role)
            }
            .font(.subheadline)
            .padding(.top, 3)

            Spacer() // Pushes everything to the top
        }
        .padding()
    }
}

struct ProfileView_Previews: PreviewProvider {
    static var previews: some View {
        ProfileView()
    }
}
